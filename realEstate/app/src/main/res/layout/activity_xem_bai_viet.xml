<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".XemBaiViet"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="aaa"
            android:textSize="40dp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_gravity="center">

        </TextView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/detailImage"
            android:padding="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txtSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số phòng: "
                    android:layout_marginRight="15dp"
                    android:textColor="#4CAF50"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:id="@+id/txtSP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="5"
                    android:textSize="20dp"
                    android:textStyle="normal">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtKV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4CAF50"
                    android:text="Khu vực: "
                    android:layout_marginRight="25dp"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:id="@+id/txtKV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành phố Hồ Chí Minh"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="normal">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txtKT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4CAF50"
                    android:text="Kích thước: "
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:id="@+id/txtCD1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="5"
                    android:textSize="20dp"
                    android:textStyle="normal">

                </TextView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txtND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4CAF50"
        android:text="Nội dung: "
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:id="@+id/txtND1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không cần phải tốn quá nhiều thời gian, tiền bạc hay công sức, với một chút sáng tạo là bạn có thể đem mùa thu đẹp dịu dàng vào không gian sinh sống của gia đình. Một vài ý tưởng dưới đây bạn có thể tham khảo và áp dụng vào không gian nhà mình."
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="normal">

    </TextView>
    <TextView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Yêu cầu liên hệ"
        android:textSize="20sp"
        android:textColor="#2196F3"
        android:gravity="center"
        android:onClick="contact"/>

</LinearLayout>